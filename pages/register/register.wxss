/* pages/test/register.wxss */

.container {
  background: url("https://mlg.proya.com:8099/image/login/login2.jpg");
  background-size: 100% 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #fff;
}

/*下划线*/

.line {
  width: 50%;
  height: 3rpx;
  background-color: #fff;
}

.icon {
  height: 34rpx;
  width: 33rpx;
  margin-right: 2%;
}

/*登录提交表*/

.login_form {
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-items: center;
  bottom: 7%;
  width: 100%;
}

.item {
  display: flex;
  width: 100%;
  justify-content: center;
}

.remind {
  font-size: 14px;
  color: rgb(255, 242, 255);
  width: 100%;
}

.input-text {
  margin-left: 1%;
  font-size: 14px;
  width: 52%;
  color: rgb(255, 242, 255);
  border-bottom: solid #fff;
  border-bottom-width: 1rpx;
  padding-left: auto;
}

.bottom-form {
  position: fixed;
  left: 25rpx;
  bottom: 30rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.login_but {
  margin-left: 37%;
  margin-top: 8%;
  height: 30px;
  width: 26%;
}
.sendcode{
  position:flex;
  width:17%;
  height:54rpx;
  margin-top:-3%;
  margin-left:-16%;
  z-index: 999;
}