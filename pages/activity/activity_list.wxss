/* pages/activity/activity_list.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #aaa;
  background: url("https://mlg.proya.com:8099/image/activity/activity.jpg");
  background-size: 100% 100%;
}

.title_view {
  margin-top: 5%;
  display: flex;
  justify-content: center;
  width: 100%;
}

.title_text {
  color: #fff;
  font-size: 35rpx;
}

.swiper-tab {
  margin-top: 22%;
  height: 40px;
  line-height: 25px;
  color: rgb(100, 100, 100);
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.swiper-tab-list {
  display: flex;
  align-content: center;
  justify-content: center;
  font-size: 15px;
  font-weight: 400;
  width: 25%;
  border-radius: 5px;
  background-color: #fff;
  border: 1rpx solid rgb(219, 216, 216);
}

.on {
  background-color: rgb(172, 85, 224);
  color: #f6f5fa;
}

.menu {
  width: 100%;
  height: 80%;
  overflow: auto;
  margin-top: 6%;
}

.item {
  background: url("https://mlg.proya.com:8099/image/activity/1.png");
  background-size: 100% 100%;
  width: 100%;
  height: 40%;
}

.act_img {
  width: 97%;
  height: 60%;
  margin-left: 1.5%;
  position: relative;
  top: 3.5%;
  border-radius: 5px 5px 0px 0px;
}

.act_info {
  margin-top: 3%;
  height: 40%;
  width: 92%;
  margin-left: 4%;
}

.icon {
  position: absolute;
  width: 8px;
  height: 20px;
  right: 4%;
  margin-top: 4%;
}

.act_name {
  font-size: 30rpx;
}

.act_description {
  font-size: 25rpx;
  color: rgb(146, 146, 146);
  margin-left: 5%;
  width: 100px;
  overflow: hidden;
  height: 20rpx;
}

.act_time {
  color: rgb(240, 152, 42);
}
