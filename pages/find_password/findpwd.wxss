.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: #fff;
  background: url("https://mlg.proya.com:8099/image/findpassord/findpassword.jpg");
  background-size: 100% 100%;
}

.input-from {
  margin-top: 10%;
  height: 26%;
  width: 80%;
  margin-left: 10%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  border: 1px solid;
  border-image: linear-gradient(85deg, #ac95fd, #eb6fd3) 2 2;
}

.icon {
  height: 33rpx;
  width: 33rpx;
  margin-left: 5%;
}

.item {
  display: flex;
  flex-direction: row;
  height: 33%;
  align-items: center;
}

.remind {
  background-image: -webkit-gradient(linear, right 0, 0 0, from(#ac95fd), to(#eb6fd3));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.input-text {
  margin-left: 7%;
  font-size: 15px;
  width: 100%;
  color: #aaa;
}

.line {
  background: linear-gradient(to right, #ac95fd, #eb6fd3);
  height: 1px;
}
