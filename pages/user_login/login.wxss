/* pages/logs/login.wxss */

.container {
  background: url("https://mlg.proya.com:8099/image/login/login2.jpg");
  background-size: 100% 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
}

/*下划线*/

.line {
  width: 50%;
  height: 3rpx;
  background-color: #fff;
}

.icon {
  height: 33rpx;
  width: 33rpx;
  margin-top: 1%;
  margin-right: 2%;
}

/*登录提交表*/

.login_form {
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-items: center;
  bottom: 10%;
  width: 100%;
}

.item {
  display: flex;
  width: 100%;
  justify-content: center;
}

.remind {
  font-size: 14px;
  color: rgb(255, 242, 255);
  width: 100%;
  text-align: center;
}

.input-text {
  font-size: 14px;
  text-align: center;
  width: 52%;
  color: rgb(255, 242, 255);
  border-bottom: solid #fff;
  border-bottom-width: 1rpx;
  padding-left: auto;
}

.bottom-form {
  position: fixed;
  left: 25rpx;
  bottom: 30rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.wx_login {
  width: 24%;
  font-size: 25rpx;
}

.wx_logo {
  height: 36rpx;
  width: 36rpx;
}

.login_but {
  margin-left: 37%;
  margin-top: 4%;
  height: 30px;
  width: 26%;
}
