/* pages/logs/test.wxss */

.container {
  height: 100%;
  display: flex;
  background: url("https://mlg.proya.com:8099/image/detail/detail.jpg");
  background-size: 100% 100%;
  flex-direction: column;
}

.res-item {
  display: flex;
  width: 33.3%;
  justify-content: center;
}

.res-title {
  width: 100%;
  display: flex;
  margin-top: 6%;
}

.item {
  margin-top: 1%;
  width: 100%;
  border-radius: 5%;
  background: url("https://mlg.proya.com:8099/image/detail/1.png");
  background-size: 100% 100%;
  height: 75%;
}

.title {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 35rpx;
}

.message-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50px;
}

.message-title {
  width: 25%;
  overflow-x: auto;
  height: 25px;
  margin-left: 2%;
}

.message-time {
  width: 30%;
  margin-left: auto;
}

.message-num {
  width: 26%;
  height: 25px;
  margin-left: auto;
}

.item-text {
  color: #aaa;
  font-size: 35rpx;
  font-weight: 300;
}
