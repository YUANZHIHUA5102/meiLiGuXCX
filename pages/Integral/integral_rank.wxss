.container {
  width: 100%;
  height: 100%;
  /* position: fixed; */
  display: block;
  overflow: auto;
  background: url("https://mlg.proya.com:8099/image/rank/rank.jpg");
}

.top-view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 40px;
  line-height: 25px;
  margin-top: 5%; 
}

.top-title { 
  color: #fff;
  font-size: 30rpx;
   /* margin: 0 15rpx;  */
  padding: 0 20rpx; 
  /* width: 20%; */
  text-align: center;
  font-weight: 400; 
}
.top-title-molid{
  margin:0 30rpx;
}
.present-vue{
  background-color: #fff;
  color: #9c84fd;
  border-radius: 12.5px;
}
.List {
  width: 95%;
  margin-top: 5%;
  background: url("https://mlg.proya.com:8099/image/rank/1.png");
  background-size: 100% 100%;
  height: 56.5%;
}

.good-img {
  width: 230rpx;
  height: 110rpx;
  margin: 0rpx 0rpx 20rpx 20rpx;
  display: flex;
  border-radius: 10%;
  background-color: rgb(230, 224, 224);
}

.menu {
  top: 50rpx;
  height: 85%;
  bottom: 150rpx;
  overflow-y: scroll;
  position: relative;
}

.item {
  display: flex;
  flex-direction: row;
}

.rank-info {
  height: 120rpx;
  width: 150%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: url("https://mlg.proya.com:8099/image/rank/2.png");
  background-size: 100% 100%;
  left: -18rpx;
  top: -3rpx;
  position: relative;
  margin: 0rpx 20rpx 20rpx 0rpx;
}
.guLi{
  justify-content: flex-start;display:flex;width:13%;color: rgb(248, 170, 117);
}