/* pages/user_info/mine.wxss */

.container {
  background: url("https://mlg.proya.com:8099/image/mine/mine.jpg");
  background-size: 100% 100%;
}

.userinfo {
  top: 18%;
  display: flex;
  position: fixed;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.userinfo-btn {
  margin-top: 50rpx;
  background: none !important;
  color: #000 !important;
  font-size: 40rpx;
}

/* 订单 */

.loginBtnView {
  width: 100%;
  display: flex;
  flex-direction: column;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}

.Btn {
  display: flex;
  justify-content: center;
  align-content: center;
  color: #000;
  font-size: 35rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-weight: 400;
}

.item {
  width: 33.3%;
  height: 250rpx;
}

.menu {
  position: fixed;
  width: 100%;
  height: 200rpx;
  display: flex;
  bottom: 30%;
}

.userinfo-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin-top: 4.5%;
}

.userinfo-avatar-shadow {
  position: fixed;
  margin-top: 2.2%;
  border-radius: 50%;
  width: 208rpx;
  height: 208rpx;
  /*box-shadow:4rpx 7rpx 9rpx 2rpx #d1cedf ;*/
  mix-blend-mode: multiply;
}
