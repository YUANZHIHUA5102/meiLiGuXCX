/* pages/order/NoPay_order.wxss */

/*切换栏*/

page {
  width: 100%;
  height: 100%;
  position: fixed;
  display: block;
  background: url("https://mlg.proya.com:8099/image/order/order.jpg");
  background-size: 100% 100%;
}

.swiper-tab {
  top: 5%;
  height: 40px;
  line-height: 25px;
  color: #fff;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.swiper-tab-list {
  margin: 0 15px;
  display: flex;
  align-content: center;
  justify-content: center;
  padding: 0 4px;
  font-size: 15px;
  width: 20%;
  font-weight: 400;
}

.on {
  background-color: #fff;
  color: #9c84fd;
  border-radius: 12.5px;
}

.navTopList {
  display: flex;
  width: 100%;
  height: 70rpx;
  background: #fff;
  border-bottom: 1rpx solid #bebebe;
  margin-top: 5px;
}

.navTopList .order-info {
  text-align: center;
}

.navTopList .order-info view {
  width: 56rpx;
  height: 56rpx;
  margin-left: 31rpx;
}

.navTopList .order-info text {
  font-size: 34rpx;
}

.navTopList .order-info text.active {
  color: #ff6662;
}

.navTopList .ywc, .navTopList .dfk, .navTopList .yqx {
  flex: 1;
}

/*订单列表*/

.orderDetails {
  background: url("https://mlg.proya.com:8099/image/order/2_03.png");
  background-size: 100% 100%;
  width: 96%;
  margin-left: 2%;
  position: relative;
}

.orderListTitle {
  height: 100rpx;
  line-height: 100rpx;
}

.orderListTitle .userName {
  padding-right: 10rpx;
  margin-left: 20px;
  font-size: 34rpx;
  margin-top: 1%;
  position: absolute;
}

.orderListTitle .userStyle {
  font-size: 30rpx;
  color: #aaa;
  font-weight: 300;
}

.orderListTitle .orderStatus {
  float: right;
  /*margin-right: 40rpx;*/
  color: #f5b52a;
  font-size: 34rpx;
  position: absolute;
  width: 95%;
  direction: rtl;
  margin-top: 0.5%;
}

.orderListDetails {
  display: flex;
  height: 200rpx;
  width: 90%;
  margin-left: 3%;
}

.orderListDetails .productImg {
  height: 180rpx;
  width: 50rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.orderListDetails .productImg image {
  width: 100px;
  height: 90%;
}

.orderListDetails .productInfo {
  /*flex: 4;*/
  margin: 40rpx 10px 20px 160rpx;
  font-size: 15rpx;
}

.orderListDetails .productInfo .productTitle {
  font-size: 25rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10px;
  font-weight: 400;
}

.orderListDetails .productInfo .productPrice {
  font-weight: 300;
}

.productCount {
  height: 80rpx;
  line-height: 80rpx;
  margin-right: 30rpx;
}

.productCount>view {
  float: right;
  margin-right: 30rpx;
}
