/* pages/order/succ_order.wxss */

page {
  display: flex;
  position: fixed;
  flex-direction: column;
  height: 100%;
  background: url("https://mlg.proya.com:8099/image/goodsdetail/goodsdetail.jpg");
  background-size: 100% 100%;
}

/* 直接设置swiper属性 */

swiper {
  height: 50%;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.detail {
  display: flex;
  flex-direction: column;
  background: linear-gradient(#eb6fd3, #ac95fd);
  justify-content: center;
  height: 8%;
}

.detail .title {
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
  text-align: justify;
}

.detail .price {
  color: #fff;
  font-size: 40rpx;
  margin: 10rpx;
  margin-left: 30rpx;
}

.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}

.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}

.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
}

.image_detail {
  width: 100%;
}

.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}

.line_nav {
  width: 5rpx;
  height: 100%;
  background-color: gainsboro;
}

/* 占位 */

text {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  margin: 10rpx;
}

.text-remark {
  display: block;
  font-size: 30rpx;
  margin: 10rpx;
  width: 90%;
  margin-left: 5%;
  color: #aaa;
  font-weight: 300;
  height: 8%;
  overflow-y: auto;
}

.goods_detail {
  height: 10%;
  font-weight: 300;
  font-size: 30rpx;
  color: #aaa;
  width: 90%;
  margin-left: 5%;
  word-break: break-all;
  overflow-y: auto;
}
